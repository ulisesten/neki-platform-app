<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardview"
        android:layout_alignParentBottom="false"
        app:layout_insetEdge="none"
        android:clipChildren="true"
        app:contentPadding="0dp"
        android:paddingBottom="0dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@mipmap/ic_launcher_round"
                        android:id="@+id/imageView"
                        android:adjustViewBounds="false" android:layout_marginLeft="0dp" android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView" android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp" android:layout_alignLeft="@+id/imageView"
                        android:layout_alignStart="@+id/imageView" android:layout_alignRight="@+id/imageView"
                        android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
                        android:layout_alignEnd="@+id/imageView" android:layout_marginBottom="0dp"
                        android:id="@+id/text_element_layout">
                        <TextView
                                android:text="$8.00"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_price"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="24sp"
                                android:textStyle="bold" android:paddingTop="16dp"
                                android:paddingLeft="8dp" android:paddingRight="8dp"/>
                        <TextView
                                android:id="@+id/product_name"
                                android:text="Nombre del Producto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textStyle="bold" android:textSize="24sp"
                                android:padding="8dp"/>
                        <TextView
                                android:text="Esta es la descripcion del producto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_description"
                                android:padding="8dp"/>
                </LinearLayout>

        </RelativeLayout>


</android.support.v7.widget.CardView>

